{
    "name": "max31856-espidf",
    "version": "1.0.0",
    "description": "Easily use multiple MAX31855 and MAX31856 thermocouples. on a single bus on an ESP32 with full hardware SPI support.",
    "frameworks": ["arduino","espidf"],
    "platforms": "espressif32",
    "keywords": [
      "max31856",
      "max31855",
      "esp32",
      "espidf",
      "platformio",
      "arduino"
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/digiexchris/esp-max318-thermocouple"
    },
    "headers": [
      "max31856-espidf/max318.h",
      "max31856-espidf/max31856.h",
      "max31856-espidf/max31855.h"
    ],
    "build": {
      "srcFilter": "+<*>",
      "flags": [
        "-I ./src/max31856-espidf/"
      ]
    }
  }